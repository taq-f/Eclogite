@import "../styles/font"
@import "../styles/color"
@import "../styles/layout"

list-item-height = 60px
repository-name-height = list-item-height / 2

.list-item
  display flex
  height list-item-height
  transition background-color 150ms 0s ease-out
  width 100%

  &:hover
    background-color bgcolor-hover

.repository-info
  flex 1
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

.repository-name
  display flex
  align-items center
  font-size font-size-normal
  height repository-name-height

.repository-path
  color font-color-secondary-text
  font-size font-size-small
  margin-left layout-spacing-small
  height repository-name-height

.action
  font-size 18px
  margin-left layout-spacing-small
  &.open
    color font-color-secondary-text
