@import "../styles/layout"

.container
  display flex
  flex-direction column
  height 100%

.file-opening
  border-bottom border-devider
  box-sizing border-box
  display flex
  align-items center
  min-height 50px
  padding layout-spacing-small

.hunk-container
  padding-left layout-spacing-normal
  padding-right layout-spacing-normal
  padding-top layout-spacing-normal
  &:last-child
    padding-bottom layout-spacing-normal

.diff
  flex 1
  position relative

.no-diff
  align-center()
  flex 1
