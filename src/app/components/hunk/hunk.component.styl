@import "../../styles/font"
@import "../../styles/layout"

icon-size = 15px

.card
  width 100%
.card-content
  padding 0

// Overlay background to colorize modified lines.
.diff-background
  bottom 0
  left 0
  opacity 0.1
  position absolute
  right 0
  top 0
  transition opacity 100ms 0s ease-out
  z-index 0
  &.unchanged
    background-color #FFF
    opacity 1
  &.plus
    background-color #4CAF50
  &.minus
    background-color #F44336
  &.selected
    opacity 0.3

.check
  flex 0 0 35px
  .material-icons
    color font-color-secondary-text
    font-size icon-size
    margin-top 4px
    text-align center
    width 35px

.header
  align-items center
  background-color #1E88E5
  display flex
  font-size font-size-small
  height 30px
  &.none
    opacity 0.6
  pre
    color #FFF

  // Checkbox override in header
  .check
    .material-icons
      margin-top 3px
      color #FFF

.line
  position relative

  .line-components
    display flex
    font-size 11px
    line-height 23px
    margin 0
    white-space pre-wrap
    word-break break-all

    span
      display inline-block
      z-index 1

  .line-no
    color font-color-secondary-text
    flex 0 0 30px
    margin-right layout-spacing-small
    text-align right

  .devider
    border-right 4px solid #E0E0E0
    flex 0 0 0px

  .content
    margin-left layout-spacing-small
    margin-right layout-spacing-small
